<%- include('../parts/head',{title:'CASH CONTROL - Lista de Despesas'}); %>
<link rel="stylesheet" href="/css/list-pizza.css">
<div id="list-pizza">
	<h1 name="cash" id="cash">CASH CONTROL</h1>
	<a href="/despesas/create">Adicionar nova Despesa</a>
	<table>
		<thead>
			<tr>
				<td>Id</td>
				<td>Data</td>
                <td>Categoria</td>
				<td>Carteira</td>
				<td>Valor</td>
                <td>Obs</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% for(let despesa of despesas ) { %>
			
			<tr>
				<td><%= despesa.id %></td>
				<td><%= despesa.data_despesa %></td>
                <td><%= despesa.categoria.nome %></td>
				<td><%= despesa.carteira.nome %></td>
				<td><%= despesa.valor %></td>
                <td><%= despesa.obs %></td>
				<td>
					<form method="POST" action="/despesas/<%= despesa.id %>/delete?_method=DELETE">
						<button type="submit">Remover</button>
					</form>
					<a href="/despesas/<%= despesa.id %>/edit">Editar</button>
				</td>
			</tr>
			<% } %>
		</tbody>
	</table>
</div>
<%- include('../parts/foot'); %>